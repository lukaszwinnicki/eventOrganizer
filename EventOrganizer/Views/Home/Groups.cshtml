@model GroupsViewModel
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner" ng-controller="MenuCtrl">
        <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">Event Organizer</a>
            <div class="nav-collapse collapse">
                <ul class="nav pull-left">
                    <li class="dropdown" ng-controller="SearchCtrl">
                        <form class="navbar-search pull-left">
                            <input type="text" id="search-input" placeholder="Search" ng-model="pattern" ng-change="search(pattern)"/>
                        </form>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#"></a>
                        <ul class="dropdown-menu">
                            <li ng-repeat="searchResult in searchResults">
                                <a href="" ng-click="searchResult.GoTo()">{{searchResult.Name}}</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <p class="navbar-text pull-right">
                    Logged in as <a href="#" class="navbar-link">{{user.Name}}</a>
                </p>
                <ul class="nav  pull-right">
                    <li><a href="#about"><i class="icon-envelope" style="padding-right: 5px;"></i>Notifications</a></li>
                    <li><a href="#"><i class="icon-user" style="padding-right: 5px;" ng-click="goToGroups()"></i>Groups</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div ng-controller="ViewCtrl" ng-show="isViewLoading">
    <div class="span2">&nbsp;</div>
    <div class="span8">
        <div class="progress progress-striped active">
            <div class="bar" style="width: 100%;"></div>
        </div>
    </div>
</div>
<div ng-view class="container-fluid">
</div>

