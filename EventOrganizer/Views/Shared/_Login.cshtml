@model EventOrganizer.Web.ViewModels.LoginViewModel
<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel" style="padding: 0px;">
    <li>
        <div style="padding-left: 10px; padding-right: 10px; padding-top: 10px;">
            <form method="POST" class="form-inline" id="js-login-form">
                <span class="text-error" id="js-login-error"></span>
                <div class="control-group" style="margin-bottom: 3px">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                    </div>
                </div>
                <div class="control-group" style="margin-bottom: 3px">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    <div class="controls">
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                    </div>
                </div>
                <div class="control-group" style="margin-bottom: 10px">
                    <div class="controls">
                        <label class="checkbox">
                            @Html.CheckBoxFor(m => m.Remember)
                            Remember Me
                       
                        </label>
                    </div>
                </div>
                <div class="modal-footer" style="background-color: #ffffff; padding: 10px 0 0 0">
                    <button type="submit" class="btn">Sign in</button>
                </div>
            </form>
        </div>
    </li>
</ul>
