@model EventOrganizer.Web.ViewModels.LoginViewModel
<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
    <li>
        <div style="padding: 10px">
            <form method="POST" class = "form-horizontal" id = "js-login-form">
                <span class="text-error" id="js-login-error" style="margin: 20px 0"></span>

                <div class="control-group" style="margin-bottom: 3px">
                    @Html.LabelFor(m => m.Email, new {@class = "control-label", style = "width:100px;"})
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Email, new {placeholder = "Email"})
                        @Html.ValidationMessageFor(m => m.Email, null, new {@class = "hidden"})
                    </div>
                </div>
                <div class="control-group" style="margin-bottom: 3px">
                    @Html.LabelFor(m => m.Password, new {@class = "control-label", style = "width:100px;"})
                    <div class="controls">
                        @Html.PasswordFor(m => m.Password, new {placeholder = "Password"})
                        @Html.ValidationMessageFor(m => m.Password, null, new {@class = "hidden"})
                    </div>
                </div>
                <div class="control-group" style="margin-bottom: 3px">
                    <div class="controls">
                        <label class="checkbox">
                            @Html.ValidationMessageFor(m => m.Remember)
                            @Html.CheckBoxFor(m => m.Remember)
                            Remember Me
                        </label>
                    </div>
                </div>
                <div class="control-group" style="margin: 0">
                    <div class="controls">
                        <button type="submit" class="btn">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
    </li>
</ul>